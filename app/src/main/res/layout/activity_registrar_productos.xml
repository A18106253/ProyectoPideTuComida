<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".actividades.RegistrarProductos">

    <RatingBar
        android:id="@+id/rbvaloracion"
        android:layout_width="242dp"
        android:layout_height="55dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="57dp"
        android:numStars="5"
        android:outlineAmbientShadowColor="@color/colorblanco"
        android:progressTint="#FF9800"
        android:rating="0"
        app:layout_constraintBottom_toTopOf="@+id/btnSiguiente"
        app:layout_constraintStart_toStartOf="@+id/edtDescripcion"
        app:layout_constraintTop_toBottomOf="@+id/edtDescripcion" />

    <Spinner
        android:id="@+id/spnTipo"
        android:layout_width="218dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/edtNombres" />

    <EditText
        android:id="@+id/edtNombres"
        android:layout_width="344dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="22dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Nombre: "
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtPrecios"
        android:layout_width="183dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Precio"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/edtDescripcion"
        app:layout_constraintEnd_toEndOf="@+id/Foto"
        app:layout_constraintStart_toStartOf="@+id/btnRegistrar"
        app:layout_constraintTop_toBottomOf="@+id/btnAgregar" />

    <ImageView
        android:id="@+id/Foto"
        android:layout_width="183dp"
        android:layout_height="154dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="27dp"
        app:srcCompat="@drawable/ageless"
        android:background="@color/colorblanco"
        app:layout_constraintBottom_toTopOf="@+id/edtPrecios"
        app:layout_constraintEnd_toStartOf="@+id/btnAgregar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnTipo"
        />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="148dp"
        android:layout_height="53dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="78dp"
        android:background="@drawable/botones"
        android:text="Elegir Imagen"
        app:layout_constraintBottom_toTopOf="@+id/edtPrecios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Foto"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edtDescripcion"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Describe:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/rbvaloracion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPrecios" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/botones"
        android:text="Registrar"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSiguiente"
        app:layout_constraintEnd_toStartOf="@+id/btnSiguiente"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="123dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="91dp"
        android:text="TIPO"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAgregar"
        app:layout_constraintEnd_toStartOf="@+id/spnTipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNombres" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="177dp"
        android:layout_height="49dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="143dp"
        android:background="@drawable/botones"
        android:text="Ver Lista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRegistrar"
        app:layout_constraintTop_toBottomOf="@+id/rbvaloracion" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="162dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImaFotoo"
                android:layout_width="112dp"
                android:layout_height="136dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/ageless" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_margin="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtNombree"
                    android:layout_width="249dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="TextView "
                    android:textColor="@color/colorNegro"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtOcupacion"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNombre"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/ImaFotoo"
                    android:layout_toRightOf="@id/ImaFotoo"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtContacto"
                    android:layout_width="256dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/txtOcupacion"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/ImaFotoo"
                    android:layout_toRightOf="@id/ImaFotoo"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

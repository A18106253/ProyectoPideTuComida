<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorblanco"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="261dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fotocomida"
                android:layout_width="411dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ageless" />

            <TextView
                android:id="@+id/nombrecomida"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="@color/colorNegro"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/preciocomida"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Precio"
                android:textAlignment="center"
                android:textColor="@color/colorNegro"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/descripcioncomida"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="Comentario"
                android:textAlignment="center"
                android:textColor="@color/colorNegro"
                android:textSize="19sp" />

            <RatingBar
                android:id="@+id/RTValoracion"
                style="@android:style/Widget.Holo.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:progressBackgroundTint=" @color/colorAmarillo"
                android:numStars="5"
                android:progressTint="@color/colorAmarillo"
                android:rating="0" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
